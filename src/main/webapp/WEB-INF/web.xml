<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://xmlns.jcp.org/xml/ns/javaee https://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<welcome-file-list>
		<welcome-file>index.jsf</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE
		</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- Primefaces 11 -->
	<context-param>
		<param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CLIENT_SIDE_LOCALISATION</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.COOKIES_SAME_SITE</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CSP</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CSP_POLICY</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.DIR</param-name>
		<param-value>ltr</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.EARLY_POST_PARAM_EVALUATION</param-name>
		<param-value>false</param-value>
	</context-param>
	<!-- <context-param> -->
	<!-- <param-name>primefaces.EXCEPTION_TYPES_TO_IGNORE_IN_LOGGING</param-name> -->
	<!-- <param-value>javax.faces.application.ViewExpiredException,javax.persistence.RollbackException</param-value> -->
	<!-- </context-param> -->
	<context-param>
		<param-name>primefaces.FLEX</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.INTERPOLATE_CLIENT_SIDE_VALIDATION_MESSAGES
		</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.LEGACY_WIDGET_NAMESPACE</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.MARK_INPUT_AS_INVALID_ON_ERROR_MSG</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.MOVE_SCRIPTS_TO_BOTTOM</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.MULTI_VIEW_STATE_STORE</param-name>
		<param-value>session</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.PRIME_ICONS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.RESET_VALUES</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.SUBMIT</param-name>
		<param-value>full</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>vela</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.TOUCHABLE</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.TRANSFORM_METADATA</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>auto</param-value>
	</context-param>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

</web-app>